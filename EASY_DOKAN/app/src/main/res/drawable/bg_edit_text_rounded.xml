<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_white" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/pink_accent" /> <!-- Pink glow on focus -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_white" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/light_blue_primary" />
        </shape>
    </item>

</selector>
