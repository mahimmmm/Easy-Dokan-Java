<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/dashboard" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Section (Quick Info Cards) -->
            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Info"
                android:textStyle="bold" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:columnCount="2"
                app:useDefaultMargins="true">

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/total_products_text" style="@style/DashboardCardText" tools:text="Total Products\n0" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/total_sales_text" style="@style/DashboardCardText" tools:text="Total Sales\n৳0" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/stock_in_text" style="@style/DashboardCardText" tools:text="Stock In (DSR)\nN/A" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/pending_dues_text" style="@style/DashboardCardText" tools:text="Pending Dues\n৳0" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/todays_sales_text" style="@style/DashboardCardText" tools:text="Today's Sales\n৳0" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView style="@style/DashboardInfoCard" app:layout_columnWeight="1" app:layout_gravity="fill">
                    <TextView android:id="@+id/low_stock_alerts_text" style="@style/DashboardCardText" tools:text="Low Stock Alerts\n0" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

            <!-- Middle Section (Charts & Graphs) -->
            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Charts &amp; Graphs"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/sales_chart_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:src="@drawable/ic_reports"
                    app:tint="?attr/colorSecondary"
                    android:contentDescription="Sales Chart Placeholder" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Section (Tables & Lists) -->
            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Recent Activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recent_activity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading recent activity..."
                android:padding="8dp"
                android:background="@drawable/bg_edit_text_rounded"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
