<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receive_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receive_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 30 @ ৳ 100.0"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

    </LinearLayout>

    <TextView
        android:id="@+id/receive_item_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="৳ 3000.0"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/receive_item_remove_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_delete"
        app:iconTint="@android:color/holo_red_light" />

</LinearLayout>
